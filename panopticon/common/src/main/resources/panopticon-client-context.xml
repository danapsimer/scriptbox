<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  	<bean id="runtimeConfigurer" class="org.scriptbox.util.spring.context.EvalConfigurer">
	 	<property name="locations">
		  <list>
			<value>classpath*:panopticon-client.properties</value>
		  </list>
		</property>
    	<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
  	</bean>
	
	<bean id="monitor" class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
	    <property name="serviceUrl" value="http://${agent.host}:${agent.port}/remoting/lm/"/>
	    <property name="serviceInterface" value="org.scriptbox.box.remoting.server.BoxInterface"/>
	</bean>

</beans>
